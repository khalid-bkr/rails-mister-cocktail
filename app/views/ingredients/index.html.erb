<div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <h2>Ingredients: </h2>
        <% @ingredients.each do |ingredient| %>
        <h4> <%= link_to ingredient.name , ingredient_path(ingredient) %></h4>
        <%= link_to "Delete", ingredient_path(ingredient), method: :delete, data: { confirm: "Are you sure?" } , class:"btn btn-warning" %><hr>
        <% end %>
        <%= link_to "New Ingredient", new_ingredient_path , class:"btn btn-primary"%>
      </div>
    </div>
  </div>
